<div class="container">

  <h2 class="exhibition" style="display:inline">名盤編集</h2>
  <br><br>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= form_with model: @sound, url: sound_path(@sound), method: :patch, local:true do |f| %>
      <div class="form-group" style="width: 650px;">
        <div class="row">
          <label for="artist" class="col-sm-3 col-form-label pt-0"><i class="fas fa-users"></i> アーティスト <span style="color: red;">＊<span></label>
          <div class="col-sm-9">
           <%= f.text_field :artist, size: "30x5",autofocus: true, placeholder: "Dvořák" %>
          </div>
        </div>
      </div>
      <div class="form-group" style="width: 650px;">
        <div class="row">
          <label for="title" class="col-sm-3 col-form-label pt-0"><i class="fas fa-compact-disc"></i> タイトル <span style="color: red;">＊<span></label>
          <div class="col-sm-9">
            <%= f.text_field :title, size: "30x5",placeholder: "Humoresky" %>
          </div>
        </div>
      </div>
      <div class="form-group" style="width: 650px;">
        <div class="row">
          <label for="genre" class="col-sm-3 col-form-label pt-0"><i class="fas fa-music"></i> ジャンル <span style="color: red;">＊<span></label>
          <div class="col-sm-9">
            <%= f.jenre%>
          </div>
        </div>
      </div>
      <div class="form-group" style="width: 650px;">
        <div class="row">
          <label for="introduction" class="col-sm-3 col-form-label pt-0"><i class="fas fa-comment-alt fa-flip-horizontal"></i> 説明 <span style="color: red;">＊<span></label>
          <div class="col-sm-9">
           <%= f.text_area :introduction, size: "30x5",placeholder: "名盤の説明をご記入ください" %>
          </div>
        </div>
      </div>

      <div class="form-group" style="width: 650px;">
        <div class="row">
          <label for="rate" class="col-sm-3 col-form-label pt-0">評価 <span style="color: red;">＊<span></label>
          <div>
           <%= f.rate %>
          </div>
        </div>
      </div>



      <div class="form-group mx-auto" style="width: 135px;">
        <%= f.submit "更新", class: "btn btn-success" %>
      </div>
     <% end %>
   </div>
  </div>
</div>